<%- include('./layouts/header', {title: 'Login - Centro medico Dos Alamos'}); %> 

<% if (errorLogin != '') { %>
    <p class="alert alert-danger text-center"><%= errorLogin %> </p>
<% } %>

<div>
    <form action="/login" method="post" class="formulariologin" id="getFormularioLogin">
        <h1  > Inicio de sesión</h1>
        <div class="contenedor1">
            <div class="input-contenedor">
                <i class="fas fa-envelope icon"></i>
                <input class="input1" type="email" name="email" id="email" placeholder="Ingresar correo">
            </div>
            <div class="input-contenedor">
                <i class="fas fa-key icon"></i>
                <input class="input1"  type="password" name="password" id="password" placeholder="Ingresar contraseña">
            </div>
            <input type="submit" value="Aceptar" class="button">
            <p class="p1">¿No tienes cuenta? <a href="/register">Registrarse</a></p>
        </div>
    </form>
</div>

<%- include('./layouts/footer'); %> 